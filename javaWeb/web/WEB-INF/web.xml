<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 对第一个servlet helloServlet.java 进行配置 -->
    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>demo.HelloServlet</servlet-class>
        <!-- 配置Servlet的初始化参数 -->
        <init-param>
            <!-- 参数名 -->
            <param-name>user</param-name>
            <!-- 参数值 -->
            <param-value>root</param-value>
        </init-param>
        <init-param>
            <!-- 参数名 -->
            <param-name>passWorld</param-name>
            <!-- 参数值 -->
            <param-value>litao.</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!-- 第二个servlet demo.WorldServlet.java 对Servlet的初始化顺序进行测试 -->
    <servlet>
        <servlet-name>world</servlet-name>
        <servlet-class>demo.WorldServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>world</servlet-name>
        <url-pattern>/world</url-pattern>
    </servlet-mapping>

    <!-- 配置当前应用的初始化参数 -->
    <context-param>
        <param-name>jdbcDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>

    <!-- 对一个提交表单的注册 -->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>demo.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- 注册第一个HttpServlet -->
    <servlet>
        <servlet-name>loginHttp</servlet-name>
        <servlet-class>demo.LoginHttpServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginHttp</servlet-name>
        <url-pattern>/loginHttp</url-pattern>
    </servlet-mapping>

    <!-- 注册JSP -->
    <servlet>
        <servlet-name>demoJSP</servlet-name>
        <jsp-file>/page/demo.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>demoJSP</servlet-name>
        <url-pattern>/demojsp</url-pattern>
    </servlet-mapping>


    <!-- 一个注册账号的demo -->
    <servlet>
        <servlet-name>register</servlet-name>
        <jsp-file>/register/register.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>show</servlet-name>
        <jsp-file>/register/show.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>show</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>

    <!-- demoCookie -->
    <servlet>
        <servlet-name>loginCookie</servlet-name>
        <jsp-file>/demoCookie/login.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginCookie</servlet-name>
        <url-pattern>/loginCookie</url-pattern>
    </servlet-mapping>

</web-app>