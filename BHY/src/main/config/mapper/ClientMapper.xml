<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="main.config.mapper.ClientMapper">

    <!-- #################### SQL片段 #################### -->

    <!-- 条件查询 -->
    <sql id="findClientInDetailWhere">
        <if test="clientCustom != null">
            <if test="clientCustom.cl_id != null">
                and cl_id = #{clientCustom.cl_id}
            </if>
            <if test="clientCustom.cl_name != null">
                and cl_name = '%${clientCustom.cl_name}%'
            </if>
            <if test="clientCustom.mobile != null">
                and mobile = '%${clientCustom.mobile}%'
            </if>
            <if test="clientCustom.u_id != null">
                and u_id = #{clientCustom.u_id}
            </if>
            <if test="clientCustom.cl_age != null">
                and cl_age = #{clientCustom.cl_age}
            </if>
            <if test="clientCustom.cl_sex != null">
                and cl_sex = '%${clientCustom.cl_sex}%'
            </if>
            <if test="clientCustom.cl_emil != null">
                and cl_emil = '%${clientCustom.cl_emil}%'
            </if>
        </if>
    </sql>

    <!-- 分页查询 -->
    <sql id="limit">
        <if test="page != null">
            limit #{page.offSet}, #{page.size}
        </if>
    </sql>


    <!-- #################### resultMap #################### -->

    <!-- #################### select #################### -->

    <!-- [分页][条件]查询用户 -->
    <select id="findClientLimitInDetail" parameterType="ClientQueryVo" resultType="ClientCustom">
        select *
        from client
        <where>
            <include refid="findClientInDetailWhere"/>
        </where>
        <include refid="limit"/>
    </select>

    <!-- #################### insert #################### -->

    <!-- #################### update #################### -->

    <!-- #################### delete #################### -->

</mapper>